{

textdomain "iscsi-server";

import "Label";
import "Wizard";
import "IscsiServer";

include "iscsi-server/helps.ycp";

/**
 * Configure1 dialog
 * @return dialog result
 */
any Configure1Dialog () {

    /* IscsiServer configure1 dialog caption */
    string caption = _("IscsiServer Configuration");

    /* IscsiServer configure1 dialog contents */
    term contents = `Label (_("First part of configuration of iscsi-server"));

    Wizard::SetContentsButtons(caption, contents, HELPS["c1"]:"",
	    Label::BackButton(), Label::NextButton());

    any ret = nil;
    while(true) {

	ret = UI::UserInput();

	/* abort? */
	if(ret == `abort || ret == `cancel) {
	    if(ReallyAbort()) break;
	    else continue;
	}
        else if(ret == `next || ret == `back) {
            break;
        }
        else {
            y2error("unexpected retcode: %1", ret);
            continue;
        }
    }

    return ret;
}

